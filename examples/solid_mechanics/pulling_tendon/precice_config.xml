<?xml version="1.0"?>

<precice-configuration>
  <!-- format for console output of precice -->
  <log>
    <sink type="stream" output="stdout"  filter='(%Severity% >= debug) and (not (%Function% = "advance"))' format="\033[0;33m%Rank% [precice]\033[0m %ColorizedSeverity%\033[0;33m%Message%\033[0m" enabled="true" />
  </log>

  <data:vector name="Velocity"/>
  <data:vector name="Displacement"/>
  <data:vector name="Traction"/>

  <mesh name="BottomTendonMesh" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>

  <mesh name="TopTendonMesh" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>

  <participant name="BottomTendonSolver">
    <provide-mesh name="BottomTendonMesh" />
    <receive-mesh name="TopTendonMesh" from="TopTendonSolver"/>

    <read-data  name="Displacement" mesh="BottomTendonMesh"/>
    <read-data  name="Velocity" mesh="BottomTendonMesh"/>
    <write-data name="Traction" mesh="BottomTendonMesh"/>

    <mapping:nearest-neighbor direction="read" from="TopTendonMesh" to="BottomTendonMesh" constraint="consistent"/>
    
    <export:vtu directory="preCICE-output"/>
  </participant>

  <participant name="TopTendonSolver"> 
    <receive-mesh name="BottomTendonMesh" from="BottomTendonSolver"/>
    <provide-mesh name="TopTendonMesh" />

    <write-data name="Displacement" mesh="TopTendonMesh"/>
    <write-data name="Velocity" mesh="TopTendonMesh"/>
    <read-data  name="Traction" mesh="TopTendonMesh"/>

    <mapping:nearest-neighbor direction="read" from="BottomTendonMesh" to="TopTendonMesh" constraint="consistent"/>
    
    <export:vtu directory="preCICE-output" />
  </participant>
  
  <!-- Communication method, use TCP sockets, Change network to "ib0" on SuperMUC -->
  <m2n:sockets acceptor="TopTendonSolver" connector="BottomTendonSolver" network="lo" />

  <coupling-scheme:parallel-implicit>
    <participants first="TopTendonSolver" second="BottomTendonSolver"/>

    <max-time value="20.0"/>          
    <time-window-size value="0.1"/>   

    <max-iterations value="25" />

    <relative-convergence-measure limit="1e-4" data="Displacement" mesh="TopTendonMesh" strict="0"/>
    <relative-convergence-measure limit="1e-4" data="Velocity" mesh="TopTendonMesh" strict="0"/>
    <absolute-convergence-measure limit="1e-2" data="Traction" mesh="BottomTendonMesh" strict="0"/>

    <exchange data="Traction" mesh="BottomTendonMesh" from="BottomTendonSolver" to="TopTendonSolver"/>  
    <exchange data="Displacement" mesh="TopTendonMesh" from="TopTendonSolver" to="BottomTendonSolver"/>  
    <exchange data="Velocity" mesh="TopTendonMesh" from="TopTendonSolver" to="BottomTendonSolver"/>  

  </coupling-scheme:parallel-implicit>

</precice-configuration>