<?xml version="1.0"?>

<precice-configuration>
  <!-- format for console output of precice -->
  <log>
    <sink type="stream" output="stdout"  filter='(%Severity% >= debug) and (not (%Function% = "advance"))' format="\033[0;33m%Rank% [precice]\033[0m %ColorizedSeverity%\033[0;33m%Message%\033[0m" enabled="true" />
  </log>

  <data:vector name="Velocity"/>
  <data:vector name="Displacement"/>
  <data:vector name="Traction"/>

  <mesh name="LeftTendonMesh" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>

  <mesh name="CentralTendonMeshLeft" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>

  <mesh name="CentralTendonMeshRight" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>

  <mesh name="RightTendonMesh" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>

  <participant name="LeftTendonSolver">
    <provide-mesh name="LeftTendonMesh" />
    <receive-mesh name="CentralTendonMeshLeft" from="CentralTendonSolver"/>

    <read-data  name="Displacement" mesh="LeftTendonMesh"/>
    <read-data  name="Velocity" mesh="LeftTendonMesh"/>
    <write-data name="Traction" mesh="LeftTendonMesh"/>

    <mapping:nearest-neighbor direction="read" from="CentralTendonMeshLeft" to="LeftTendonMesh" constraint="consistent"/>
    <export:vtu directory="preCICE-output"/>
  </participant>

  <participant name="CentralTendonSolver"> 
    <receive-mesh name="LeftTendonMesh" from="LeftTendonSolver"/>
    <provide-mesh name="CentralTendonMeshLeft" />
    <provide-mesh name="CentralTendonMeshRight" />
    <receive-mesh name="RightTendonMesh" from="RightTendonSolver"/>

    <write-data name="Displacement" mesh="CentralTendonMeshLeft"/>
    <write-data name="Velocity" mesh="CentralTendonMeshLeft"/>
    <read-data  name="Traction" mesh="CentralTendonMeshLeft"/>

    <write-data name="Displacement" mesh="CentralTendonMeshRight"/>
    <write-data name="Velocity" mesh="CentralTendonMeshRight"/>
    <read-data  name="Traction" mesh="CentralTendonMeshRight"/>

    <mapping:nearest-neighbor direction="read" from="LeftTendonMesh" to="CentralTendonMeshLeft" constraint="consistent"/>
    <mapping:nearest-neighbor direction="read" from="RightTendonMesh" to="CentralTendonMeshRight" constraint="consistent"/>

    <export:vtu directory="preCICE-output" />
  </participant>

  <participant name="RightTendonSolver">
    <receive-mesh name="CentralTendonMeshRight" from="CentralTendonSolver"/>
    <provide-mesh name="RightTendonMesh" />

    <read-data  name="Displacement" mesh="RightTendonMesh"/>
    <read-data  name="Velocity" mesh="RightTendonMesh"/>
    <write-data name="Traction" mesh="RightTendonMesh"/>

    <mapping:nearest-neighbor direction="read" from="CentralTendonMeshRight" to="RightTendonMesh" constraint="consistent"/>
    <export:vtu directory="preCICE-output"/>
  </participant>
  
  <!-- Communication method, use TCP sockets, Change network to "ib0" on SuperMUC -->
  <m2n:sockets acceptor="CentralTendonSolver" connector="LeftTendonSolver" network="lo" />
  <m2n:sockets acceptor="CentralTendonSolver" connector="RightTendonSolver" network="lo" />

  <coupling-scheme:multi>
    <participant name="CentralTendonSolver" control="yes"/>
    <participant name="LeftTendonSolver" />
    <participant name="RightTendonSolver" />

    <max-time value="20.0"/>          
    <time-window-size value="1"/>   


    <max-iterations value="25" />

    <relative-convergence-measure limit="1e-4" data="Displacement" mesh="CentralTendonMeshLeft" strict="0"/>
    <relative-convergence-measure limit="1e-4" data="Velocity" mesh="CentralTendonMeshLeft" strict="0"/>
    <absolute-convergence-measure limit="1e-2" data="Traction" mesh="LeftTendonMesh" strict="0"/>

    <relative-convergence-measure limit="1e-4" data="Displacement" mesh="CentralTendonMeshRight" strict="0"/>
    <relative-convergence-measure limit="1e-4" data="Velocity" mesh="CentralTendonMeshRight" strict="0"/>
    <absolute-convergence-measure limit="1e-2" data="Traction" mesh="RightTendonMesh" strict="0"/>

    <exchange data="Traction" mesh="RightTendonMesh" from="RightTendonSolver" to="CentralTendonSolver"/>
    <exchange data="Traction" mesh="LeftTendonMesh" from="LeftTendonSolver" to="CentralTendonSolver"/>  

    <exchange data="Displacement" mesh="CentralTendonMeshLeft" from="CentralTendonSolver" to="LeftTendonSolver"/>  
    <exchange data="Velocity" mesh="CentralTendonMeshLeft" from="CentralTendonSolver" to="LeftTendonSolver"/>  

    <exchange data="Displacement" mesh="CentralTendonMeshRight" from="CentralTendonSolver" to="RightTendonSolver"/>  
    <exchange data="Velocity" mesh="CentralTendonMeshRight" from="CentralTendonSolver" to="RightTendonSolver"/>  

  </coupling-scheme:multi>

</precice-configuration>